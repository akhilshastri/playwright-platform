
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@pages/*": ["pages/*"],
      "@flows/*": ["flows/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@recordings/*": ["recordings/*"],
      "playwright-core-utils/*": ["../core/src/*"]
    }
  },
  "include": ["src"]
}
